<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <secured attributes="ROLE_orga, ROLE_studentin" match="any" />

    <input name="userId" type="mops.domain.models.user.UserId" required="true" />

    <on-start>
        <evaluate expression="new mops.adapters.datepolladapter.dtos.MetaInfDto()" result="flowScope.metaInfDto"/>
        <evaluate expression="new mops.adapters.datepolladapter.dtos.ConfigDto()" result="flowScope.configDto"/>
        <evaluate expression="new mops.adapters.datepolladapter.dtos.OptionsDto()" result="flowScope.optionsDto"/>
    </on-start>

    <view-state id="mobileSchedulingNameSettings" view="/flows/scheduling/mobileSchedulingNameSettings"
                model="metaInfDto">

        <binder>
            <binding property="title"/>
            <binding property="description"/>
            <binding property="location"/>
        </binder>

        <transition on="home" to="home"/>
        <transition on="access" to="mobileSchedulingAccessSettings">
            <evaluate expression="datePollAdapter.validateFirstStep(metaInfDto, messageContext)"/>
        </transition>
    </view-state>

    <view-state id="mobileSchedulingAccessSettings" view="/flows/scheduling/mobileSchedulingAccessSettings"
                model="metaInfDto">

        <binder>
            <binding property="startDate"/>
            <binding property="startTime"/>
            <binding property="endDate"/>
            <binding property="endTime"/>
        </binder>

        <transition on="name" to="mobileSchedulingNameSettings"/>
        <transition on="choicesettings" to="mobileSchedulingChoiceSettings">
            <evaluate expression="datePollAdapter.validateSecondStep(metaInfDto, messageContext)"/>
        </transition>
    </view-state>

    <view-state id="mobileSchedulingChoiceSettings" view="flows/scheduling/mobileSchedulingChoiceSettings"
                model="configDto">

        <binder>
            <binding property="voteIsEditable"/>
            <binding property="priorityChoice"/>
            <binding property="anonymous"/>
            <binding property="openForOwnEntries"/>
            <binding property="open"/>
            <binding property="singleChoice"/>
        </binder>

        <transition on="access" to="mobileSchedulingAccessSettings"/>
        <transition on="choiceoptions" to="mobileSchedulingChoiceOptions">
            <evaluate expression="datePollAdapter.validate(configDto, messageContext)"/>
        </transition>
    </view-state>

    <view-state id="mobileSchedulingChoiceOptions" view="flows/scheduling/mobileSchedulingChoiceOptions"
                model="optionsDto">

        <binder>
            <binding property="options"/>
        </binder>

        <transition on="addoption" to="mobileSchedulingChoiceOptions">
            <evaluate expression="datePollAdapter.addOption(optionsDto, requestParameters.addDate,
                                                                           requestParameters.addStartTime,
                                                                           requestParameters.addEndTime,
                                                                           messageContext)"/>
        </transition>

        <transition on="deleteoption" to="mobileSchedulingChoiceOptions">
            <evaluate expression="datePollAdapter.deleteOption(optionsDto, requestParameters.deleteDate,
                                                                           requestParameters.deleteStartTime,
                                                                           requestParameters.deleteEndTime)"/>
        </transition>

        <transition on="choicesettings" to="mobileSchedulingChoiceSettings"/>
        <transition on="publication" to="mobileSchedulingPublicationSettings">
            <evaluate expression="datePollAdapter.validate(optionsDto, messageContext)"/>
        </transition>
    </view-state>

    <view-state id="mobileSchedulingPublicationSettings" view="flows/scheduling/mobileSchedulingPublicationSettings">
        <transition on="choiceoptions" to="mobileSchedulingChoiceOptions"/>
        <transition on="confirmation" to="mobileSchedulingConfirmation"/>
    </view-state>

    <view-state id="mobileSchedulingConfirmation" view="flows/scheduling/mobileSchedulingConfirmation">
        <transition on="publication" to="mobileSchedulingPublicationSettings"/>
        <transition on="submit" to="home"/>
    </view-state>

    <end-state id="home" view="externalRedirect:/"/>

</flow>